<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/author_profile_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            tools:src="@mipmap/ic_launcher"
        />


        <TextView android:id="@+id/repo_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"
                  android:layout_centerVertical="true"
                  android:layout_toEndOf="@+id/author_profile_img"
                  android:layout_toRightOf="@+id/author_profile_img"
                  android:padding="5dp"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  tools:text="UndaGit"/>

        <TextView android:id="@+id/author_name"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignLeft="@+id/repo_name"
                  android:layout_alignStart="@+id/repo_name"
                  android:layout_below="@+id/repo_name"
                  android:layout_marginLeft="10dp"
                  android:layout_marginStart="10dp"
                  android:textSize="16sp"
                  android:textStyle="italic"
                  tools:text="Matej Vukosav "/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/repo_name"
            android:layout_alignStart="@+id/repo_name"
            android:layout_below="@+id/author_name"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="center_horizontal"
        >

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_eye"
            />

            <TextView
                android:id="@+id/num_of_watchers_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="123"
            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fork"
            />

            <TextView
                android:id="@+id/num_of_forks_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="83"

            />

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_issue"
            />
            <TextView
                android:id="@+id/num_of_issues_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="62"
            />

        </LinearLayout>

    </RelativeLayout>
</layout>